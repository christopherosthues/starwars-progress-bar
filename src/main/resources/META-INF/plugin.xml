<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.christopherosthues.starwarsprogressbar</id>
    <name>Star Wars Progress Bar</name>
    <vendor email="christopher.osthues@gmail.com">Christopher Osthues</vendor>
    <version>1.0.0</version>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable parentId="appearance"
                                 instance="com.github.christopherosthues.starwarsprogressbar.ui.configuration.StarWarsProgressConfigurable"
                                 id="org.intellij.sdk.settings.AppSettingsConfigurable" />

        <applicationService serviceImplementation="com.github.christopherosthues.starwarsprogressbar.ui.configuration.StarWarsPersistentStateComponent" />
    </extensions>

    <applicationListeners>
        <listener class="com.github.christopherosthues.starwarsprogressbar.listeners.StarWarsProgressListener"
                  topic="com.intellij.ide.ui.LafManagerListener" />
        <listener class="com.github.christopherosthues.starwarsprogressbar.listeners.StarWarsProgressListener"
                  topic="com.intellij.ide.plugins.DynamicPluginListener" />
    </applicationListeners>
</idea-plugin>
